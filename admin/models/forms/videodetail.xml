<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_multimidias/models/rules"
	addfieldpath="/administrator/components/com_multimidias/models/fields"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="date_created"
			type="hidden"
		/>
		<field
			name="user_created"
			type="hidden"
		/>
		<field
			class="inputbox validate-title"
			default=""
			description=""
			label="Title"
			name="title"
			required="true"
			size="40"
			type="text"
			validate="title"
		/>
		<field
			default=""
			description=""
			label="Description"
			name="description"
			filter="safehtml"
			width="300"
			type="editor"
		/>
		<field
			class="inputbox author"
			default=""
			description=""
			label="Author"
			name="author"
			size="40"
			type="text"
		/>
		<field
			class="inputbox compositor"
			default=""
			description=""
			label="Compositor"
			name="compositor"
			size="40"
			type="text"
		/>
		<field
			default=""
			description=""
			label="Date"
			name="date"
			format="%Y-%m-%d"
			type="calendar"
		/>
		<field
			default=""
			description=""
			label="File"
			name="file"
			type="file"
		/>
		<field
			class="inputbox link"
			default=""
			description=""
			label="Link"
			name="link"
			size="40"
			type="text"
		/>
		<field
			default=""
			description=""
			label="Thumbnail"
			name="thumbnail"
			type="file"
		/>
		<field
			default=""
			description=""
			label="Category"
			name="category"
			required="true"
			extension="com_multimidias"
			type="category"
			validate="category"
		/>
	</fieldset>
</form>